<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllActivity">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#1E0BD8"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="436dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#EF0502"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/watch1"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cost1"
        app:layout_constraintEnd_toStartOf="@+id/watch2"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/watch2"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="128dp"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@+id/watch1"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/cost1"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="44dp"
        android:autoText="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/watch3"
        app:layout_constraintEnd_toStartOf="@+id/cost2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cost3"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cost4"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:text="text"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cost2"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch2" />

    <ImageView
        android:id="@+id/watch4"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="32dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cost2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/watch3"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="16dp"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cost3"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>