<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter Email"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/edtEmail"
        android:drawableStart="@drawable/ic_baseline_email_24" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter Password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/edtPassword"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_baseline_lock_24" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter Credit Card Number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/edtCardNum"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_baseline_credit_card_24" />

    <Button
        android:id="@+id/btnPayment"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple_500"
        android:onClick="btnOnclickPayment"
        android:text="Pay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/goToBag"
            android:onClick="btnShopOnClick"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />


    <ImageView
        android:id="@+id/home"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:onClick="btnHomeOnClick"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24" />

        <ImageView
            android:id="@+id/watchs"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:onClick="btnWatchOClick"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_watch_24" />


    </LinearLayout>


</LinearLayout>