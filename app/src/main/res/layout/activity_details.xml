<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/heart"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:onClick="heartOnClick"
        android:src="@drawable/ic_baseline_favorite_24"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/watchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/watchImage"
        android:layout_width="396dp"
        android:layout_height="189dp"
        android:layout_marginBottom="73dp"
        android:background="@color/white"
        android:scaleType="center"
        android:src="@drawable/watch1"
        app:layout_constraintBottom_toTopOf="@+id/nameWatch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToBag" />


    <TextView
        android:id="@+id/nameWatch1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/priceWatch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watchImage" />

    <TextView
        android:id="@+id/detailsWatch1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceWatch1" />

    <TextView
        android:id="@+id/priceWatch1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/detailsWatch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameWatch1" />

    <ImageView
        android:id="@+id/goToBag"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toTopOf="@+id/watchImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />


</androidx.constraintlayout.widget.ConstraintLayout>